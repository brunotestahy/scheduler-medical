<?xml version='1.0' encoding='utf-8'?>
<widget id="br.com.alis.smart.patientschedule" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Agenda do Paciente</name>
    <description>
        Aplicativo iOS para a Agenda do Paciente da Rede D'Or.
    </description>
    <author email="rededor-dev@alis-sol.com.br" href="">
        ALIS Solutions Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="AllowInlineMediaPlayback" value="true" />
    <allow-navigation href="*youtube*" />
    <allow-navigation href="*ytimg*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="Orientation" value="landscape" />
        <preference name="DisallowOverscroll" value="true" />
        <icon height="29" src="res/icons/ios/Icon-Small.png" width="29" />
        <icon height="58" src="res/icons/ios/Icon-Small@2x.png" width="58" />
        <icon height="87" src="res/icons/ios/Icon-Small@3x.png" width="87" />
        <icon height="40" src="res/icons/ios/Icon-40.png" width="40" />
        <icon height="80" src="res/icons/ios/Icon-40@2x.png" width="80" />
        <icon height="120" src="res/icons/ios/Icon-40@3x.png" width="120" />
        <icon height="120" src="res/icons/ios/Icon-60@2x.png" width="120" />
        <icon height="180" src="res/icons/ios/Icon-60@3x.png" width="180" />
        <icon height="76" src="res/icons/ios/Icon-76.png" width="76" />
        <icon height="152" src="res/icons/ios/Icon-76@2x.png" width="152" />
        <icon height="152" src="res/icons/ios/Icon-76@2x.png" width="152" />
        <icon height="167" src="res/icons/ios/Icon-83.5@2x.png" width="167" />
        <icon height="120" src="res/icons/ios/Icon-120.png" width="120" />
        <icon height="512" src="res/icons/ios/iTunesArtwork.png" width="512" />
        <icon height="1024" src="res/icons/ios/iTunesArtwork@2x.png" width="1024" />
        <splash height="2732" src="res/screen/ios/Default-Portrait@2x~ipad-pro.jpg" width="2048" />
        <splash height="2048" src="res/screen/ios/Default-Landscape@2x~ipad-pro.jpg" width="2732" />
    </platform>
    <hook src="hooks/buildClientApp.js" type="before_prepare" />
    <engine name="browser" spec="^4.1.0" />
    <engine name="ios" spec="^4.5.4" />
    <plugin name="cordova-plugin-customurlscheme" spec="^4.3.0">
        <variable name="URL_SCHEME" value="smartschedule" />
    </plugin>
    <plugin name="cordova-plugin-edit-plist-file" spec="^0.0.6" />
    <plugin name="cordova-plugin-hidden-statusbar" spec="^1.0.0" />
    <plugin name="cordova-plugin-statusbar" spec="^2.2.3" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="com.lampa.startapp" spec="~0.1.4" />
</widget>
